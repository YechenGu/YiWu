<view class="out">
  <!-- 校区 -->
  <van-cell-group>
    <van-cell title="校区" value="{{ region }}" bind:click="showPopup" />
  </van-cell-group>
  <!-- 校区选择器 -->
  <van-popup show="{{ show }}" position="bottom" bind:close="onClose">
    <van-picker columns="{{ columns }}" show-toolbar="true" toolbar-position="bottom" bind:cancel="onCancel"
      bind:confirm="onConfirm" bind:change="onChange" />
  </van-popup>
  <!-- 提示 -->
  <view class="notice">
    <text>联系方式至少选填一个</text>
  </view>
  <van-cell-group>
    <!-- 手机号 -->
    <van-field value="{{ phone }}" clearable label="电话" type="number" placeholder="请输入" />
    <!-- 微信 -->
    <van-field value="{{ wechat }}" clearable label="微信" type="text" placeholder="请输入" />
    <!-- QQ -->
    <van-field value="{{ qq }}" clearable label="QQ" type="number" placeholder="请输入" />
  </van-cell-group>
  <!-- 提交按钮 -->
  <van-goods-action>
    <van-goods-action-button text="提交" type="info" bind:click="submit" />
  </van-goods-action>
</view>